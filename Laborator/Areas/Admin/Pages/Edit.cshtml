            </div>
            <div class="form-group">
                <label asp-for="Jewelry.JewelryGroupId" class="control-label"></label>
                <select asp-for="Jewelry.JewelryGroupId" class="form-control" asp-items="ViewBag.JewelryGroupId"></select>
                <span asp-validation-for="Jewelry.JewelryGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
