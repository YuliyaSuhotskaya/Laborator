@page "{id:int}"
@model Laborator.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Jewelry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Jewelry.JewelryId" />
            <div class="form-group">
                <label asp-for="Jewelry.JewelryName" class="control-label"></label>
                <input asp-for="Jewelry.JewelryName" class="form-control" />
                <span asp-validation-for="Jewelry.JewelryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jewelry.Description" class="control-label"></label>
                <input asp-for="Jewelry.Description" class="form-control" />
                <span asp-validation-for="Jewelry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jewelry.Price" class="control-label"></label>
                <input asp-for="Jewelry.Price" class="form-control" />
                <span asp-validation-for="Jewelry.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jewelry.Image" class="control-label"></label>
